{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts API",
    "license": {
      "name": "Apache 2.0",
      "url": "<http://www.apache.org/licenses/LICENSE-2.0.html>"
    },
    "description": "A simple API for managing a personal contact book.\n Allows users to perform CRUD (Create, Read, Update, Delete) operations\n on their contacts.\n"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://nodejs-hw-mongodb-39q5.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Operations related to managing contacts"
    },
    {
      "name": "Authentication",
      "description": "Operations related to user authentication"
    }
  ],
  "paths": {
    "/contacts/{contactId}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get a contact by ID",
        "operationId": "getContactById",
        "description": "Returns a single contact object based on the provided ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "required": true,
            "description": "The unique ID of the contact to retrieve.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation. Contact found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/contactSchema"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401-Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/404-NotFound"
          }
        }
      },
      "patch": {
        "tags": [
          "Contacts"
        ],
        "summary": "Update an existing contact by ID",
        "operationId": "updateContact",
        "description": "Updates specific fields of an existing contact by its ID. Only provide the fields you want to change.\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "required": true,
            "description": "The unique ID of the contact to update.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "description": "An object containing the fields to update.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/contactUpdateSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contact updated successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/contactSchema"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400-BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/401-Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/404-NotFound"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Delete a contact by ID",
        "operationId": "deleteContact",
        "description": "Deletes a contact by its unique ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "required": true,
            "description": "The unique ID of the contact to delete.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Contact deleted successfully. No content returned."
          },
          "401": {
            "$ref": "#/components/responses/401-Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/404-NotFound"
          }
        }
      }
    },
    "/contacts": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get all contacts",
        "operationId": "getContacts",
        "description": "Returns a list of all contacts in the contact book.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "description": "Page number for pagination.",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "in": "query",
            "name": "perPage",
            "description": "Number of contacts per page.",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "in": "query",
            "name": "favorite",
            "description": "Filter contacts by favorite status.",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of contacts.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "contacts": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/contactSchema"
                      }
                    },
                    "totalPages": {
                      "type": "integer",
                      "example": 10,
                      "description": "Total number of pages available."
                    },
                    "currentPage": {
                      "type": "integer",
                      "example": 1,
                      "description": "The current page number."
                    },
                    "totalContacts": {
                      "type": "integer",
                      "example": 100,
                      "description": "Total number of contacts matching the query."
                    },
                    "perPage": {
                      "type": "integer",
                      "example": 10,
                      "description": "Number of items per page."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400-BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/401-Unauthorized"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Create a new contact",
        "operationId": "createContact",
        "description": "Creates a new contact in the contact book\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "description": "The contact object to be added.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/contactCreateSchema"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/contactSchema"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400-BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/401-Unauthorized"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Register a new user",
        "operationId": "registerUser",
        "description": "Creates a new user account\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "description": "The user registration details.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userRegisterSchema"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authResponseSchema"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400-BadRequest"
          },
          "409": {
            "$ref": "#/components/responses/409-Conflict"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Log in a user",
        "operationId": "loginUser",
        "description": "Authenticates a user and returns a token.\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "description": "User login data.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userLoginSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully. Returns token and user data.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authResponseSchema"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400-BadRequest"
          },
          "401": {
            "description": "Unauthorized. Invalid email or password.",
            "$ref": "#/components/responses/401-Unauthorized"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Log out a user",
        "operationId": "logoutUser",
        "description": "Logs out the currently authenticated user by invalidating their session or token.\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "User logged out successfully. No content returned."
          },
          "401": {
            "$ref": "#/components/responses/401-Unauthorized"
          }
        }
      }
    },
    "/auth/current": {
      "get": {
        "tags": [
          "Authentication"
        ],
        "summary": "Get current user",
        "operationId": "getCurrentUser",
        "description": "Retrieves the details of the currently authenticated user.\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved current user data.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/userResponseSchema"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401-Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Contact": {
        "$ref": "#/components/schemas/contactSchema"
      },
      "contactSchema": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "The unique identifier for the contact.",
            "example": "60d0fe4f5311236168a109ca"
          },
          "name": {
            "type": "string",
            "description": "The full name of the contact.",
            "example": "John Doe"
          },
          "phoneNumber": {
            "type": "string",
            "description": "The contact's phone number.",
            "example": "(123) 456-7890"
          },
          "email": {
            "type": "string",
            "description": "The contact's email address.",
            "example": "john.doe@example.com"
          },
          "isFavorite": {
            "type": "boolean",
            "description": "Indicates if the contact is marked as a favorite.",
            "example": true
          },
          "contactType": {
            "type": "string",
            "description": "The type of contact (e.g., personal, work).",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "personal"
          },
          "userId": {
            "type": "string",
            "description": "The identifier of the user who owns the contact.",
            "example": "60d0fe4f5311236168a109cb"
          },
          "photo": {
            "type": "string",
            "description": "URL to the contact's photo.",
            "example": "https://example.com/photos/johndoe.jpg"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time when the contact was created.",
            "example": "2025-10-01T12:00:00Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time when the contact was last updated.",
            "example": "2025-10-05T15:30:00Z"
          }
        },
        "required": [
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ]
      },
      "contactUpdateSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The full name of the contact.",
            "minLength": 3,
            "maxLength": 20,
            "example": "Jane Doe"
          },
          "phoneNumber": {
            "type": "string",
            "description": "The contact's phone number.",
            "pattern": "^[\\d\\s()+-]+$",
            "minLength": 10,
            "maxLength": 20,
            "example": "(123) 456-7890"
          },
          "email": {
            "type": "string",
            "description": "The contact's email address.",
            "format": "email",
            "example": "jane.doe@example.com"
          },
          "isFavorite": {
            "type": "boolean",
            "description": "Indicates if the contact is marked as a favorite."
          },
          "contactType": {
            "type": "string",
            "description": "The type of contact (e.g., personal, work).",
            "enum": [
              "work",
              "home",
              "personal"
            ]
          }
        }
      },
      "contactCreateSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The full name of the contact.",
            "minLength": 3,
            "maxLength": 20,
            "example": "John Doe"
          },
          "phoneNumber": {
            "type": "string",
            "description": "The contact's phone number.",
            "pattern": "^[\\d\\s()+-]+$",
            "minLength": 10,
            "maxLength": 20,
            "example": "(123) 456-7890"
          },
          "email": {
            "type": "string",
            "description": "The contact's email address.",
            "format": "email",
            "example": "john.doe@example.com"
          },
          "isFavorite": {
            "type": "boolean",
            "description": "Indicates if the contact is marked as a favorite."
          },
          "contactType": {
            "type": "string",
            "description": "The type of contact (e.g., personal, work).",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "personal"
          }
        },
        "required": [
          "name",
          "phoneNumber",
          "contactType"
        ]
      },
      "userRegisterSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name.",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address.",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "User's password (should be at least 6 characters).",
            "minLength": 6
          }
        },
        "required": [
          "name",
          "email",
          "password"
        ]
      },
      "userResponseSchema": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "Unique identifier for the user.",
            "example": "64b7f0c2e1d3f2a5b6c7d8e9"
          },
          "name": {
            "type": "string",
            "description": "User's name.",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address.",
            "example": "user@example.com"
          }
        }
      },
      "authResponseSchema": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "Authentication token for the user.",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "user": {
            "$ref": "#/components/schemas/userResponseSchema"
          }
        }
      },
      "userLoginSchema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address.",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "User's password.",
            "minLength": 6
          }
        },
        "required": [
          "email",
          "password"
        ]
      }
    },
    "responses": {
      "NotFound": {
        "$ref": "#/components/responses/404-NotFound"
      },
      "Unauthorized": {
        "$ref": "#/components/responses/401-Unauthorized"
      },
      "401-Unauthorized": {
        "description": "Unauthorized access. Authentication is required.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Unauthorized access."
                }
              }
            }
          }
        }
      },
      "404-NotFound": {
        "description": "Contact not found.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Contact not found"
                }
              }
            }
          }
        }
      },
      "400-BadRequest": {
        "description": "Bad Request. The request could not be understood or was missing required parameters.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Bad Request. Please check your input parameters."
                }
              }
            }
          }
        }
      },
      "409-Conflict": {
        "description": "Conflict. The email address is already in use.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "The email address is already in use."
                }
              }
            }
          }
        }
      }
    }
  }
}